{
  "scripts": {
    "clean": "rimraf dist",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds --hmr\"",
    "dev": "rollup -c -w",
    "build": "yarn clean && NODE_ENV=production rollup -c",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && NODE_ENV=test wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"NODE_ENV=test wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "module": "dist/index.js",
  "description": "Webcomponent yooda-comp following open-wc recommendations",
  "author": "yooda-comp",
  "license": "MIT",
  "version": "0.0.0",
  "name": "yooda-comp",
  "main": "dist/index.js",
  "peerDependencies": {
    "@open-wc/lit-helpers": "0.3.12",
    "lit-element": "2.4.0",
    "lit-html": "1.3.0",
    "static-params": "0.1.3",
    "style-inject": "0.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/eslint-parser": "7.12.1",
    "@babel/eslint-plugin": "7.12.1",
    "@open-wc/dev-server-hmr": "0.1.0",
    "@open-wc/eslint-config": "4.2.0",
    "@open-wc/lit-helpers": "0.3.12",
    "@open-wc/testing": "2.5.32",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-node-resolve": "11.1.0",
    "@stylelint/postcss-css-in-js": "0.37.2",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "@web/dev-server": "0.1.4",
    "@web/dev-server-esbuild": "0.2.11",
    "@web/dev-server-rollup": "0.3.2",
    "@web/dev-server-storybook": "0.3.3",
    "@web/test-runner": "0.12.2",
    "autoprefixer": "10.2.1",
    "concurrently": "5.3.0",
    "esbuild": "0.8.33",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-html": "6.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-lit": "1.3.0",
    "eslint-plugin-lit-a11y": "1.0.1",
    "eslint-plugin-no-only-tests": "2.4.0",
    "eslint-plugin-wc": "1.2.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "lit-element": "2.4.0",
    "lit-html": "1.3.0",
    "postcss": "8.2.4",
    "postcss-cli": "8.3.1",
    "postcss-discard-comments": "4.0.2",
    "postcss-discard-empty": "4.0.1",
    "postcss-syntax": "0.36.2",
    "postcss-url": "10.1.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "rollup": "2.36.2",
    "rollup-plugin-copy": "3.3.0",
    "rollup-plugin-dts": "2.0.1",
    "rollup-plugin-esbuild": "2.6.1",
    "rollup-plugin-filesize": "9.1.0",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "sinon": "9.2.3",
    "static-params": "0.1.3",
    "style-inject": "0.3.0",
    "tailwindcss": "2.0.2",
    "tslib": "2.1.0",
    "typescript": "4.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
